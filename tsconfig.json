{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2020",
      "esnext"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "baseUrl": "./",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importHelpers": true
  },
  "exclude": [
    "node_modules",
    ".next",
    "cypress"
  ],
  "include": [
    "**/*.d.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.ts",
    "**/*.tsx",
    "jest.config.js",
    ".jest/setup.ts",
    "before-build.js"
  ]
}
